<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bhargava.cse.StartActivity"
    android:background="@drawable/radialgradientback">

    <TextView
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome!!!"
        android:textColor="#FFFFFF"/>

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/take_quiz"
        android:layout_gravity="center"
        android:text="Take Quiz"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:onClick="take_quiz_clicked"
        android:background="@drawable/quiz"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/find_tb"
        android:text="Find A Text-Book"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:onClick="find_tb_clicked"
        android:background="@drawable/book"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/notification"
        android:text="Notification System"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:onClick="notification_clicked"
        android:background="@drawable/notification"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_weight="1"
        android:id="@+id/feedback"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:onClick="feedBack_clicked"
        android:background="@drawable/feedback"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"/>

</LinearLayout>
